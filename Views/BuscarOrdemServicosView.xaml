<UserControl x:Class="MecAppIN.Views.BuscarOrdemServicosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

        <DockPanel Margin="20">

                <!-- ===============================
             TOPO â€“ BOTÃ•ES + BUSCA
        =============================== -->
                <Grid DockPanel.Dock="Top"
                      Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- BOTÃ•ES -->
                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="0">

                                <Button Content="Reimprimir"
                                        Width="120"
                                        Margin="0,0,10,0"
                                        Command="{Binding ReimprimirCommand}"/>

                                <Button Content="Excluir"
                                        Width="100"
                                        Margin="0,0,10,0"
                                        Command="{Binding ExcluirCommand}"/>

                                <Button Content="Editar"
                                        Width="100"
                                        Margin="0,0,10,0"
                                        Command="{Binding EditarCommand}"/>

                                <Button Content="OS Pagas"
                                        Width="100"
                                        Margin="0,0,5,0"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        Command="{Binding MostrarPagasCommand}"/>

                                <Button Content="OS a Pagar"
                                        Width="120"
                                        Margin="0,0,5,0"
                                        Background="#C62828"
                                        Foreground="White"
                                        Command="{Binding MostrarNaoPagasCommand}"/>

                                <Button Content="TODAS"
                                        Width="80"
                                        Background="#2196F3"
                                        Foreground="White"
                                        Command="{Binding MostrarTodasCommand}"/>
                        </StackPanel>

                        <!-- BUSCA -->
                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="2"
                                    VerticalAlignment="Center">

                                <TextBlock Text="Buscar cliente:"
                                           Margin="0,0,6,0"
                                           VerticalAlignment="Center"/>

                                <TextBox Width="220"
                                         Text="{Binding TextoBuscaCliente,
                                        UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                </Grid>

                <!-- ===============================
             PAGINAÃ‡ÃƒO
        =============================== -->
                <Border DockPanel.Dock="Bottom"
                        Padding="6"
                        Background="#F5F5F5"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        CornerRadius="6"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0">

                        <StackPanel Orientation="Horizontal">
                                <Button Content="â—€ Anterior"
                                        Command="{Binding PaginaAnteriorCommand}"
                                        Padding="8,3"
                                        Margin="4"/>

                                <TextBlock Text="{Binding PaginaAtual}"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Margin="8,0"/>

                                <Button Content="PrÃ³ximo â–¶"
                                        Command="{Binding ProximaPaginaCommand}"
                                        Padding="8,3"
                                        Margin="4"/>
                        </StackPanel>
                </Border>

                <!-- ===============================
                             DATAGRID
                 =============================== -->
                <DataGrid ItemsSource="{Binding Ordens}"
                          SelectedItem="{Binding OrdemSelecionada}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          MouseDoubleClick="DataGrid_MouseDoubleClick">


                        <!-- ðŸŽ¨ COR DAS LINHAS -->
                        <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">

                                        <!-- padrÃ£o -->
                                        <Setter Property="Background"
                                                Value="White"/>

                                        <Style.Triggers>

                                                <!-- ðŸŸ¢ PAGA -->
                                                <DataTrigger Binding="{Binding Pago}"
                                                             Value="True">
                                                        <Setter Property="Background"
                                                                Value="#E8F5E9"/>
                                                </DataTrigger>

                                                <!-- ðŸ”´ NÃƒO PAGA -->
                                                <DataTrigger Binding="{Binding Pago}"
                                                             Value="False">
                                                        <Setter Property="Background"
                                                                Value="#FDECEA"/>
                                                </DataTrigger>

                                                <!-- ðŸ”µ SELEÃ‡ÃƒO (nÃ£o perder o azul) -->
                                                <Trigger Property="IsSelected"
                                                         Value="True">
                                                        <Setter Property="Background"
                                                                Value="#3399FF"/>
                                                        <Setter Property="Foreground"
                                                                Value="White"/>
                                                </Trigger>

                                        </Style.Triggers>
                                </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.Columns>

                                <DataGridTextColumn Header="OS"
                                                    Binding="{Binding Id}"
                                                    Width="80"/>

                                <DataGridTemplateColumn Header="Pago"
                                                        Width="80"
                                                        IsReadOnly="False">
                                        <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                        <CheckBox IsChecked="{Binding Pago, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"
                                                                  Focusable="False"/>
                                                </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>


                                <DataGridTextColumn Header="Data"
                                                    Binding="{Binding Data, StringFormat=dd/MM/yyyy}"
                                                    Width="120"/>

                                <DataGridTextColumn Header="Cliente"
                                                    Binding="{Binding ClienteNome}"
                                                    Width="*"/>

                                <DataGridTextColumn Header="VeÃ­culo"
                                                    Binding="{Binding Veiculo}"
                                                    Width="160"/>

                                <DataGridTextColumn Header="Placa"
                                                    Binding="{Binding Placa}"
                                                    Width="120"/>

                                <DataGridTextColumn Header="Total"
                                                    Binding="{Binding Total, StringFormat=C}"
                                                    Width="120"/>

                        </DataGrid.Columns>
                </DataGrid>



        </DockPanel>
</UserControl>
