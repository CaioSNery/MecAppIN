<UserControl x:Class="MecAppIN.Views.BuscarOrdemServicosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DockPanel Margin="20">

        <!-- ===============================
             BOTÃ•ES + BUSCA (TOPO)
        =============================== -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="0,0,0,10">

            <Button Content="Reimprimir"
                    Width="120"
                    Margin="0,0,10,0"
                    Command="{Binding ReimprimirCommand}"/>

            <Button Content="Excluir"
                    Width="100"
                    Margin="0,0,20,0"
                    Command="{Binding ExcluirCommand}"/>

            <Button Content="Editar"
                    Width="100"
                    Margin="0,0,10,0"
                    Command="{Binding EditarCommand}"/>

            <!-- ðŸ” BUSCA -->
            <TextBlock Text="Buscar cliente:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>

            <TextBox Width="220"
                     VerticalAlignment="Center"
                     Text="{Binding TextoBuscaCliente,
                            UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- ===============================
             PAGINAÃ‡ÃƒO (BOTTOM)
        =============================== -->
        <Border DockPanel.Dock="Bottom"
                Padding="6"
                Background="#F5F5F5"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="6"
                HorizontalAlignment="Center"
                Margin="0,10,0,0">

            <StackPanel Orientation="Horizontal">

                <Button Content="â—€ Anterior"
                        Command="{Binding PaginaAnteriorCommand}"
                        Padding="8,3"
                        Margin="4"/>

                <TextBlock Text="{Binding PaginaAtual}"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Margin="8,0"/>

                <Button Content="PrÃ³ximo â–¶"
                        Command="{Binding ProximaPaginaCommand}"
                        Padding="8,3"
                        Margin="4"/>

            </StackPanel>
        </Border>

        <!-- ===============================
             GRID (CONTEÃšDO CENTRAL)
        =============================== -->
        <DataGrid ItemsSource="{Binding Ordens}"
                  SelectedItem="{Binding OrdemSelecionada}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  MouseDoubleClick="DataGrid_MouseDoubleClick">

            <DataGrid.Columns>
                <DataGridTextColumn Header="OS"
                                    Binding="{Binding Id}"
                                    Width="80"/>

                <DataGridTextColumn Header="Data"
                                    Binding="{Binding Data, StringFormat=dd/MM/yyyy}"
                                    Width="120"/>

                <DataGridTextColumn Header="Cliente"
                                    Binding="{Binding ClienteNome}"
                                    Width="*"/>

                <DataGridTextColumn Header="VeÃ­culo"
                                    Binding="{Binding Veiculo}"
                                    Width="160"/>

                <DataGridTextColumn Header="Placa"
                                    Binding="{Binding Placa}"
                                    Width="120"/>

                <DataGridTextColumn Header="Total"
                                    Binding="{Binding Total, StringFormat=C}"
                                    Width="120"/>
            </DataGrid.Columns>

        </DataGrid>

    </DockPanel>
</UserControl>
