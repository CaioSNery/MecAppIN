<UserControl x:Class="MecAppIN.Views.OrcamentosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- TÍTULO -->
            <TextBlock Text="ORÇAMENTO"
                       FontSize="26"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- ========================= -->
            <!-- CLIENTE -->
            <!-- ========================= -->
            <GroupBox Header="Cliente"
                    Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Nome -->
                        <RowDefinition Height="Auto"/>
                        <!-- Sugestões -->
                        <RowDefinition Height="Auto"/>
                        <!-- Endereço -->
                        <RowDefinition Height="Auto"/>
                        <!-- Telefone -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Label -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Campo -->
                    </Grid.ColumnDefinitions>

                    <!-- Nome -->
                    <TextBlock Grid.Row="0"
                            Grid.Column="0"
                               Text="Nome:"
                            VerticalAlignment="Center"
                            Margin="0,0,5,0"/>
                    <TextBox Grid.Row="0"
                            Grid.Column="1"
                             Width="250"
                             HorizontalAlignment="Left"
                             Text="{Binding TextoClienteDigitado, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,5"/>

                    <!-- Sugestões -->
                    <ListBox Grid.Row="1"
                            Grid.Column="1"
                             ItemsSource="{Binding Clientes}"
                             DisplayMemberPath="Nome"
                             Width="250"
                             MaxHeight="150"
                             HorizontalAlignment="Left"
                             SelectionChanged="ClientesListBox_SelectionChanged"
                             Visibility="{Binding Clientes.Count,
                              Converter={StaticResource CountToVisibilityConverter}}"
                             Margin="0,0,0,10"/>

                    <!-- Endereço -->
                    <TextBlock Grid.Row="2"
                            Grid.Column="0"
                               Text="Endereço:"
                            VerticalAlignment="Center"
                            Margin="0,0,5,0"/>
                    <TextBox Grid.Row="2"
                            Grid.Column="1"
                             Width="250"
                             HorizontalAlignment="Left"
                             Text="{Binding ClienteEndereco, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,5"/>

                    <!-- Telefone -->
                    <TextBlock Grid.Row="3"
                            Grid.Column="0"
                               Text="Telefone:"
                            VerticalAlignment="Center"
                            Margin="0,0,5,0"/>
                    <TextBox Grid.Row="3"
                            Grid.Column="1"
                             Width="150"
                             HorizontalAlignment="Left"
                             Text="{Binding ClienteTelefone, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </GroupBox>

            <!-- ========================= -->
            <!-- VEÍCULO -->
            <!-- ========================= -->
            <GroupBox Header="Veículo"
                      Margin="0,0,0,15">
                <StackPanel Margin="10">

                    <StackPanel Orientation="Horizontal"
                                Margin="0,5">
                        <TextBlock Text="Veículo:"
                                   Width="80"/>
                        <TextBox Width="250"
                                 Text="{Binding Veiculo, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,5">
                        <TextBlock Text="Placa:"
                                   Width="80"/>
                        <TextBox Width="120"
                                 Text="{Binding Placa, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                </StackPanel>
            </GroupBox>

            <!-- ========================= -->
            <!-- SERVIÇOS -->
            <!-- ========================= -->
            <GroupBox Header="Serviços"
                      Margin="0,0,0,20">
                <StackPanel Margin="10">

                    <DataGrid ItemsSource="{Binding Itens}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="True"
                              CanUserDeleteRows="True"
                              Height="250">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Serviço"
                                                Binding="{Binding Servico, UpdateSourceTrigger=PropertyChanged}"
                                                Width="*"/>

                            <DataGridTextColumn Header="Qtde"
                                                Binding="{Binding Quantidade, UpdateSourceTrigger=PropertyChanged}"
                                                Width="80"/>

                            <DataGridTextColumn Header="Valor Unit"
                                                Binding="{Binding ValorUnitario, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                                                Width="120"/>
                        </DataGrid.Columns>

                    </DataGrid>

                </StackPanel>
            </GroupBox>

            <!-- ========================= -->
            <!-- AÇÕES -->
            <!-- ========================= -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <Button Content="Gerar Orçamento (Excel)"
                        Width="220"
                        Height="40"
                        Command="{Binding GerarExcelCommand}"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
