<UserControl x:Class="MecAppIN.Views.OrcamentosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:shared="clr-namespace:MecAppIN.Views.Shared">

    <UserControl.Resources>

        <Style TargetType="DataGrid">
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                    Value="Disabled"/>

            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                    Value="Disabled"/>

            <EventSetter Event="PreviewMouseWheel"
                         Handler="DataGrid_PreviewMouseWheel"/>
        </Style>

    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- TÍTULO -->
            <TextBlock Text="ORÇAMENTO"
                       FontSize="26"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- ========================= -->
            <!-- CLIENTE -->
            <!-- ========================= -->
            <GroupBox Header="Cliente"
                      Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Nome -->
                        <RowDefinition Height="Auto"/>
                        <!-- Sugestões -->
                        <RowDefinition Height="Auto"/>
                        <!-- Endereço -->
                        <RowDefinition Height="Auto"/>
                        <!-- Telefone -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Label -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Campo -->
                    </Grid.ColumnDefinitions>

                    <!-- Nome -->
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="Nome:"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Width="250"
                             HorizontalAlignment="Left"
                             Text="{Binding TextoClienteDigitado, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,5"/>

                    <!-- Sugestões -->
                    <ListBox Grid.Row="1"
                             Grid.Column="1"
                             ItemsSource="{Binding Clientes}"
                             SelectedItem="{Binding ClienteSelecionado, Mode=TwoWay}"
                             DisplayMemberPath="Nome"
                             Width="250"
                             MaxHeight="150"
                             HorizontalAlignment="Left"
                             Visibility="{Binding Clientes.Count,
                      Converter={StaticResource CountToVisibilityConverter}}"
                             Margin="0,0,0,10"/>


                    <!-- Endereço -->
                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="Endereço:"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Width="250"
                             HorizontalAlignment="Left"
                             Text="{Binding ClienteEndereco, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,5"/>

                    <!-- Telefone -->
                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Text="Telefone:"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBox Grid.Row="3"
                             Grid.Column="1"
                             Width="150"
                             HorizontalAlignment="Left"
                             Text="{Binding ClienteTelefone, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </GroupBox>

            <!-- ========================= -->
            <!-- VEÍCULO -->
            <!-- ========================= -->
            <GroupBox Header="Veículo"
                      Margin="0,0,0,15">
                <StackPanel Margin="10">

                    <StackPanel Orientation="Horizontal"
                                Margin="0,5">
                        <TextBlock Text="Veículo:"
                                   Width="80"/>
                        <TextBox Width="250"
                                 Text="{Binding Veiculo, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,5">
                        <TextBlock Text="Placa:"
                                   Width="80"/>
                        <TextBox Width="120"
                                 Text="{Binding Placa, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <!-- Tipo de Motor -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,10">
                        <TextBlock Text="Motor:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,6,0"/>

                        <ComboBox Width="140"
                                  ItemsSource="{Binding TiposMotor}"
                                  SelectedItem="{Binding TipoMotorSelecionado}"
                                  IsEditable="False"/>
                    </StackPanel>




                </StackPanel>
            </GroupBox>

            <!-- ========================= -->
            <!-- SERVIÇOS -->
            <!-- ========================= -->
            <shared:ServicosMotorView/>


            <!-- ========================= -->
            <!-- AÇÕES -->
            <!-- ========================= -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <!-- ATUALIZAR (EDIÇÃO) -->
                <Button Content="Atualizar Orçamento"
                        Width="200"
                        Height="40"
                        Margin="10,0,0,0"
                        Background="#2196F3"
                        Command="{Binding AtualizarOrcamentoCommand}"
                        Visibility="{Binding Editando,
                Converter={StaticResource BoolToVisibilityConverter}}"/>

                <Button Content="Gerar Ordem de Serviço"
                        Width="240"
                        Height="40"
                        Margin="10,0,0,0"
                        Background="#4CAF50"
                        Foreground="White"
                        Command="{Binding ConverterParaOsCommand}"/>


            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
