<UserControl x:Class="MecAppIN.Views.BuscarOrcamentosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

        <DockPanel Margin="20">

                <!-- BOTÃ•ES -->
                <StackPanel DockPanel.Dock="Top"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,0,0,10">

                        <Button Content="Editar"
                                Width="100"
                                Margin="0,0,10,0"
                                Command="{Binding EditarCommand}"/>

                        <Button Content="Excluir"
                                Width="100"
                                Margin="0,0,10,0"
                                Command="{Binding ExcluirCommand}"/>

                        <Button Content="Criar OS"
                                Width="120"
                                Margin="0,0,10,0"
                                Command="{Binding CriarOrdemServicoCommand}"/>

                        <Button Content="Imprimir"
                                Width="120"
                                Margin="0,0,20,0"
                                Command="{Binding ImprimirCommand}"/>

                        <!-- ðŸ” BUSCA -->
                        <TextBlock Text="Buscar cliente:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>

                        <TextBox Width="220"
                                 VerticalAlignment="Center"
                                 Text="{Binding TextoBuscaCliente, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>


                <!-- GRID -->
                <DataGrid ItemsSource="{Binding Orcamentos}"
                          SelectedItem="{Binding OrcamentoSelecionado}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          MouseDoubleClick="DataGrid_MouseDoubleClick"
                          KeyDown="DataGrid_KeyDown">


                        <DataGrid.Columns>

                                <!-- DATA -->
                                <DataGridTextColumn Header="Data"
                                                    Width="120"
                                                    Binding="{Binding Data, StringFormat=dd/MM/yyyy}"/>

                                <!-- CLIENTE -->
                                <DataGridTextColumn Header="Cliente"
                                                    Width="*"
                                                    Binding="{Binding ClienteNome}"/>

                                <!-- VEÃCULO -->
                                <DataGridTextColumn Header="VeÃ­culo"
                                                    Width="160"
                                                    Binding="{Binding Veiculo}"/>

                                <!-- OS -->
                                <DataGridTextColumn Header="OS"
                                                    Width="80"
                                                    Binding="{Binding NumeroOsExibicao}"/>

                                <!-- TOTAL -->
                                <DataGridTextColumn Header="Total"
                                                    Width="120"
                                                    Binding="{Binding Total, StringFormat=C}"/>

                        </DataGrid.Columns>
                </DataGrid>


        </DockPanel>
</UserControl>
