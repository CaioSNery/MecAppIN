<UserControl x:Class="MecAppIN.Views.OrdemServicosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>

        <Style TargetType="DataGrid">
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility"
                    Value="Disabled"/>

            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                    Value="Disabled"/>

            <EventSetter Event="PreviewMouseWheel"
                         Handler="DataGrid_PreviewMouseWheel"/>
        </Style>

    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">


            <!-- TÍTULO -->
            <TextBlock Text="ORDEM DE SERVIÇO"
                       FontSize="26"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <!-- ========================= -->
            <!-- CLIENTE -->
            <!-- ========================= -->
            <GroupBox Header="Cliente"
                      Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Nome -->
                        <RowDefinition Height="Auto"/>
                        <!-- Sugestões -->
                        <RowDefinition Height="Auto"/>
                        <!-- Endereço -->
                        <RowDefinition Height="Auto"/>
                        <!-- Telefone -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Label -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Campo -->
                    </Grid.ColumnDefinitions>

                    <!-- Nome -->
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="Nome:"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Width="250"
                             HorizontalAlignment="Left"
                             Text="{Binding TextoClienteDigitado, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,5"/>

                    <!-- Sugestões -->
                    <ListBox Grid.Row="1"
                             Grid.Column="1"
                             ItemsSource="{Binding Clientes}"
                             DisplayMemberPath="Nome"
                             SelectedItem="{Binding ClienteSelecionado}"
                             Width="250"
                             MaxHeight="150"
                             HorizontalAlignment="Left"
                             Visibility="{Binding Clientes.Count,
                      Converter={StaticResource CountToVisibilityConverter}}"
                             Margin="0,0,0,10"/>


                    <!-- Endereço -->
                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="Endereço:"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Width="250"
                             HorizontalAlignment="Left"
                             Text="{Binding ClienteEndereco, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,5"/>

                    <!-- Telefone -->
                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Text="Telefone:"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                    <TextBox Grid.Row="3"
                             Grid.Column="1"
                             Width="150"
                             HorizontalAlignment="Left"
                             Text="{Binding ClienteTelefone, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </GroupBox>

            <!-- ========================= -->
            <!-- VEÍCULO -->
            <!-- ========================= -->
            <GroupBox Header="Veículo"
                      Margin="0,0,0,15">
                <StackPanel Margin="10">

                    <StackPanel Orientation="Horizontal"
                                Margin="0,5">
                        <TextBlock Text="Veículo:"
                                   Width="80"/>
                        <TextBox Width="250"
                                 Text="{Binding Veiculo, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0,5">
                        <TextBlock Text="Placa:"
                                   Width="80"/>
                        <TextBox Width="120"
                                 Text="{Binding Placa, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <!-- Tipo de Motor -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0">
                        <TextBlock Text="Motor:"
                                   Width="80"
                                   VerticalAlignment="Center"/>

                        <ComboBox Width="200"
                                  ItemsSource="{Binding TiposMotor}"
                                  SelectedItem="{Binding TipoMotorSelecionado}"/>
                    </StackPanel>



                </StackPanel>
            </GroupBox>

            <!-- ========================= -->
            <!-- SERVIÇOS -->
            <!-- ========================= -->
            <GroupBox Header="Serviços"
                      Margin="0,0,0,20">
                <StackPanel Margin="10">

                    <!-- ================= BIELA ================= -->
                    <GroupBox Header="Biela"
                              Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!-- SERVIÇOS -->
                            <!-- SERVIÇOS -->
                            <DataGrid ItemsSource="{Binding ItensBiela}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="True"
                                      CanUserDeleteRows="True"
                                      IsReadOnly="False"
                                      Height="150"
                                      AddingNewItem="ServicosBiela_AddingNewItem">

                                <DataGrid.Columns>

                                    <!-- QUANTIDADE -->
                                    <DataGridTextColumn Header="Qtde"
                                                        Binding="{Binding Quantidade,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged}"
                                                        Width="60"/>

                                    <!-- DESCRIÇÃO -->
                                    <DataGridTextColumn Header="Descrição"
                                                        Binding="{Binding Servico,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged}"
                                                        Width="*"/>

                                    <!-- VALOR (SÓ EDITÁVEL PARA SERVIÇOS CRIADOS) -->
                                    <DataGridTextColumn Header="Valor"
                                                        Binding="{Binding ValorUnitario,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged,
                                      StringFormat=N2}"
                                                        Width="90">

                                        <!-- VISUAL -->
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="IsEnabled"
                                                        Value="{Binding ValorEditavel}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>

                                        <!-- EDIÇÃO -->
                                        <DataGridTextColumn.EditingElementStyle>
                                            <Style TargetType="TextBox">
                                                <Setter Property="IsEnabled"
                                                        Value="{Binding ValorEditavel}"/>
                                            </Style>
                                        </DataGridTextColumn.EditingElementStyle>

                                    </DataGridTextColumn>

                                    <!-- TOTAL -->
                                    <DataGridTextColumn Header="Total"
                                                        Binding="{Binding Total, StringFormat=C}"
                                                        IsReadOnly="True"
                                                        Width="90"/>
                                </DataGrid.Columns>
                            </DataGrid>



                            <!-- PEÇAS  -->
                            <DataGrid Grid.Column="1"
                                      ItemsSource="{Binding PecasBiela}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="True"
                                      CanUserDeleteRows="True"
                                      IsReadOnly="False"
                                      Height="150"
                                      AddingNewItem="PecasBiela_AddingNewItem">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Qtde"
                                                        Binding="{Binding Quantidade, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Width="60"/>

                                    <DataGridTextColumn Header="Descrição"
                                                        Binding="{Binding Servico, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Width="*"/>

                                    <DataGridTextColumn Header="Valor"
                                                        Binding="{Binding ValorUnitario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=C}"
                                                        Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>


                        </Grid>
                    </GroupBox>

                    <!-- ================= BLOCO ================= -->
                    <GroupBox Header="Bloco"
                              Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!-- ================= SERVIÇOS ================= -->
                            <!-- SERVIÇOS -->
                            <DataGrid ItemsSource="{Binding ItensBloco}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="True"
                                      CanUserDeleteRows="True"
                                      IsReadOnly="False"
                                      Height="150"
                                      AddingNewItem="ServicosBloco_AddingNewItem">

                                <DataGrid.Columns>

                                    <!-- QUANTIDADE -->
                                    <DataGridTextColumn Header="Qtde"
                                                        Binding="{Binding Quantidade,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged}"
                                                        Width="60"/>

                                    <!-- DESCRIÇÃO -->
                                    <DataGridTextColumn Header="Descrição"
                                                        Binding="{Binding Servico,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged}"
                                                        Width="*"/>

                                    <!-- VALOR (SÓ EDITÁVEL PARA SERVIÇOS CRIADOS) -->
                                    <DataGridTextColumn Header="Valor"
                                                        Binding="{Binding ValorUnitario,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged,
                                      StringFormat=N2}"
                                                        Width="90">

                                        <!-- VISUAL -->
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="IsEnabled"
                                                        Value="{Binding ValorEditavel}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>

                                        <!-- EDIÇÃO -->
                                        <DataGridTextColumn.EditingElementStyle>
                                            <Style TargetType="TextBox">
                                                <Setter Property="IsEnabled"
                                                        Value="{Binding ValorEditavel}"/>
                                            </Style>
                                        </DataGridTextColumn.EditingElementStyle>

                                    </DataGridTextColumn>

                                    <!-- TOTAL -->
                                    <DataGridTextColumn Header="Total"
                                                        Binding="{Binding Total, StringFormat=C}"
                                                        IsReadOnly="True"
                                                        Width="90"/>
                                </DataGrid.Columns>
                            </DataGrid>


                            <!-- ================= PEÇAS ================= -->
                            <DataGrid Grid.Column="1"
                                      ItemsSource="{Binding PecasBloco}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="True"
                                      CanUserDeleteRows="True"
                                      IsReadOnly="False"
                                      Height="150"
                                      AddingNewItem="PecasBloco_AddingNewItem">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Qtde"
                                                        Binding="{Binding Quantidade, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Width="60"/>

                                    <DataGridTextColumn Header="Descrição"
                                                        Binding="{Binding Servico, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Width="*"/>

                                    <DataGridTextColumn Header="Valor"
                                                        Binding="{Binding ValorUnitario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=C}"
                                                        Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>


                    <!-- ================= CABEÇOTE ================= -->
                    <GroupBox Header="Cabeçote"
                              Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!-- ================= SERVIÇOS ================= -->
                            <!-- SERVIÇOS -->
                            <DataGrid ItemsSource="{Binding ItensCabecote}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="True"
                                      CanUserDeleteRows="True"
                                      IsReadOnly="False"
                                      Height="150"
                                      AddingNewItem="ServicosCabecote_AddingNewItem">

                                <DataGrid.Columns>

                                    <!-- QUANTIDADE -->
                                    <DataGridTextColumn Header="Qtde"
                                                        Binding="{Binding Quantidade,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged}"
                                                        Width="60"/>

                                    <!-- DESCRIÇÃO -->
                                    <DataGridTextColumn Header="Descrição"
                                                        Binding="{Binding Servico,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged}"
                                                        Width="*"/>

                                    <!-- VALOR (SÓ EDITÁVEL PARA SERVIÇOS CRIADOS) -->
                                    <DataGridTextColumn Header="Valor"
                                                        Binding="{Binding ValorUnitario,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged,
                                      StringFormat=N2}"
                                                        Width="90">

                                        <!-- VISUAL -->
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="IsEnabled"
                                                        Value="{Binding ValorEditavel}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>

                                        <!-- EDIÇÃO -->
                                        <DataGridTextColumn.EditingElementStyle>
                                            <Style TargetType="TextBox">
                                                <Setter Property="IsEnabled"
                                                        Value="{Binding ValorEditavel}"/>
                                            </Style>
                                        </DataGridTextColumn.EditingElementStyle>

                                    </DataGridTextColumn>

                                    <!-- TOTAL -->
                                    <DataGridTextColumn Header="Total"
                                                        Binding="{Binding Total, StringFormat=C}"
                                                        IsReadOnly="True"
                                                        Width="90"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- ================= PEÇAS ================= -->
                            <DataGrid Grid.Column="1"
                                      ItemsSource="{Binding PecasCabecote}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="True"
                                      CanUserDeleteRows="True"
                                      IsReadOnly="False"
                                      Height="150"
                                      AddingNewItem="PecasCabeCote_AddingNewItem">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Qtde"
                                                        Binding="{Binding Quantidade, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Width="60"/>

                                    <DataGridTextColumn Header="Descrição"
                                                        Binding="{Binding Servico, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Width="*"/>

                                    <DataGridTextColumn Header="Valor"
                                                        Binding="{Binding ValorUnitario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=C}"
                                                        Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>


                    <!-- ================= EIXO ================= -->
                    <GroupBox Header="Eixo"
                              Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!-- ================= SERVIÇOS ================= -->
                            <!-- SERVIÇOS -->
                            <DataGrid ItemsSource="{Binding ItensEixo}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="True"
                                      CanUserDeleteRows="True"
                                      IsReadOnly="False"
                                      Height="150"
                                      AddingNewItem="ServicosEixo_AddingNewItem">

                                <DataGrid.Columns>

                                    <!-- QUANTIDADE -->
                                    <DataGridTextColumn Header="Qtde"
                                                        Binding="{Binding Quantidade,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged}"
                                                        Width="60"/>

                                    <!-- DESCRIÇÃO -->
                                    <DataGridTextColumn Header="Descrição"
                                                        Binding="{Binding Servico,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged}"
                                                        Width="*"/>

                                    <!-- VALOR (SÓ EDITÁVEL PARA SERVIÇOS CRIADOS) -->
                                    <DataGridTextColumn Header="Valor"
                                                        Binding="{Binding ValorUnitario,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged,
                                      StringFormat=N2}"
                                                        Width="90">

                                        <!-- VISUAL -->
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="IsEnabled"
                                                        Value="{Binding ValorEditavel}"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>

                                        <!-- EDIÇÃO -->
                                        <DataGridTextColumn.EditingElementStyle>
                                            <Style TargetType="TextBox">
                                                <Setter Property="IsEnabled"
                                                        Value="{Binding ValorEditavel}"/>
                                            </Style>
                                        </DataGridTextColumn.EditingElementStyle>

                                    </DataGridTextColumn>

                                    <!-- TOTAL -->
                                    <DataGridTextColumn Header="Total"
                                                        Binding="{Binding Total, StringFormat=C}"
                                                        IsReadOnly="True"
                                                        Width="90"/>
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- ================= PEÇAS ================= -->
                            <DataGrid Grid.Column="1"
                                      ItemsSource="{Binding PecasEixo}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="True"
                                      CanUserDeleteRows="True"
                                      IsReadOnly="False"
                                      Height="150"
                                      AddingNewItem="PecasEixo_AddingNewItem">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Qtde"
                                                        Binding="{Binding Quantidade, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Width="60"/>

                                    <DataGridTextColumn Header="Descrição"
                                                        Binding="{Binding Servico, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Width="*"/>

                                    <DataGridTextColumn Header="Valor"
                                                        Binding="{Binding ValorUnitario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=C}"
                                                        Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                </StackPanel>
            </GroupBox>


            <!-- ================= MOTOR ================= -->
            <GroupBox Header="Motor"
                      Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <!-- ================= SERVIÇOS ================= -->
                    <!-- SERVIÇOS -->
                    <DataGrid ItemsSource="{Binding ItensMotor}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="True"
                              CanUserDeleteRows="True"
                              IsReadOnly="False"
                              Height="150"
                              AddingNewItem="ServicosMotor_AddingNewItem">

                        <DataGrid.Columns>

                            <!-- QUANTIDADE -->
                            <DataGridTextColumn Header="Qtde"
                                                Binding="{Binding Quantidade,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged}"
                                                Width="60"/>

                            <!-- DESCRIÇÃO -->
                            <DataGridTextColumn Header="Descrição"
                                                Binding="{Binding Servico,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged}"
                                                Width="*"/>

                            <!-- VALOR (SÓ EDITÁVEL PARA SERVIÇOS CRIADOS) -->
                            <DataGridTextColumn Header="Valor"
                                                Binding="{Binding ValorUnitario,
                                      Mode=TwoWay,
                                      UpdateSourceTrigger=PropertyChanged,
                                      StringFormat=N2}"
                                                Width="90">

                                <!-- VISUAL -->
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="IsEnabled"
                                                Value="{Binding ValorEditavel}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>

                                <!-- EDIÇÃO -->
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox">
                                        <Setter Property="IsEnabled"
                                                Value="{Binding ValorEditavel}"/>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>

                            </DataGridTextColumn>

                            <!-- TOTAL -->
                            <DataGridTextColumn Header="Total"
                                                Binding="{Binding Total, StringFormat=C}"
                                                IsReadOnly="True"
                                                Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- ================= PEÇAS ================= -->
                    <DataGrid Grid.Column="1"
                              ItemsSource="{Binding PecasMotor}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="True"
                              CanUserDeleteRows="True"
                              IsReadOnly="False"
                              Height="150"
                              AddingNewItem="PecasMotor_AddingNewItem">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Qtde"
                                                Binding="{Binding Quantidade, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Width="60"/>

                            <DataGridTextColumn Header="Descrição"
                                                Binding="{Binding Servico, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Width="*"/>

                            <DataGridTextColumn Header="Valor"
                                                Binding="{Binding ValorUnitario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=C}"
                                                Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

            <!-- ========================= -->
            <!-- TOTAIS PARCIAIS -->
            <!-- ========================= -->
            <StackPanel Margin="0,10,0,5"
                        HorizontalAlignment="Right">

                <TextBlock
                    Text="{Binding TotalServicos, StringFormat=TOTAL SERVIÇOS: R$ {0:N2}}"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Margin="0,0,0,3"/>

                <TextBlock
                    Text="{Binding TotalPecas, StringFormat=TOTAL PEÇAS: R$ {0:N2}}"
                    FontSize="16"
                    FontWeight="SemiBold"/>
            </StackPanel>



            <!-- ========================= -->
            <!-- AÇÕES -->
            <!-- ========================= -->
            <Grid Margin="0,10,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- TOTAL GERAL -->
                <TextBlock
                    Grid.Column="0"
                    Text="{Binding TotalGeral, StringFormat=TOTAL GERAL: R$ {0:N2}}"
                    FontSize="18"
                    FontWeight="Bold"
                    VerticalAlignment="Center"
                    Margin="0,0,40,0"/>

                <!-- BOTÃO -->

                <Button Content="Atualizar OS"
                        Width="200"
                        Height="40"
                        Margin="0,0,10,0"
                        Command="{Binding AtualizarOsCommand}"
                        Visibility="{Binding Editando,
                     Converter={StaticResource BoolToVisibilityConverter}}"/>

                <Button
                    Grid.Column="1"
                    Content="Imprimir OS"
                    Width="200"
                    Height="40"
                    VerticalAlignment="Center"
                    Command="{Binding ImprimirOsCommand}"/>
            </Grid>


        </StackPanel>
    </ScrollViewer>
</UserControl>
