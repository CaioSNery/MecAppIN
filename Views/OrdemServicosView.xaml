<UserControl x:Class="MecAppIN.Views.OrdemServicosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

        <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">


                        <!-- TÍTULO -->
                        <TextBlock Text="ORDEM DE SERVIÇO"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <!-- ========================= -->
                        <!-- CLIENTE -->
                        <!-- ========================= -->
                        <GroupBox Header="Cliente"
                                  Margin="0,0,0,15">
                                <Grid Margin="10">
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <!-- Nome -->
                                                <RowDefinition Height="Auto"/>
                                                <!-- Sugestões -->
                                                <RowDefinition Height="Auto"/>
                                                <!-- Endereço -->
                                                <RowDefinition Height="Auto"/>
                                                <!-- Telefone -->
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <!-- Label -->
                                                <ColumnDefinition Width="Auto"/>
                                                <!-- Campo -->
                                        </Grid.ColumnDefinitions>

                                        <!-- Nome -->
                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   Text="Nome:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,5,0"/>
                                        <TextBox Grid.Row="0"
                                                 Grid.Column="1"
                                                 Width="250"
                                                 HorizontalAlignment="Left"
                                                 Text="{Binding TextoClienteDigitado, UpdateSourceTrigger=PropertyChanged}"
                                                 Margin="0,0,0,5"/>

                                        <!-- Sugestões -->
                                        <ListBox Grid.Row="1"
                                                 Grid.Column="1"
                                                 ItemsSource="{Binding Clientes}"
                                                 DisplayMemberPath="Nome"
                                                 SelectedItem="{Binding ClienteSelecionado}"
                                                 Width="250"
                                                 MaxHeight="150"
                                                 HorizontalAlignment="Left"
                                                 Visibility="{Binding Clientes.Count,
                      Converter={StaticResource CountToVisibilityConverter}}"
                                                 Margin="0,0,0,10"/>


                                        <!-- Endereço -->
                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="0"
                                                   Text="Endereço:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,5,0"/>
                                        <TextBox Grid.Row="2"
                                                 Grid.Column="1"
                                                 Width="250"
                                                 HorizontalAlignment="Left"
                                                 Text="{Binding ClienteEndereco, UpdateSourceTrigger=PropertyChanged}"
                                                 Margin="0,0,0,5"/>

                                        <!-- Telefone -->
                                        <TextBlock Grid.Row="3"
                                                   Grid.Column="0"
                                                   Text="Telefone:"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,5,0"/>
                                        <TextBox Grid.Row="3"
                                                 Grid.Column="1"
                                                 Width="150"
                                                 HorizontalAlignment="Left"
                                                 Text="{Binding ClienteTelefone, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>
                        </GroupBox>

                        <!-- ========================= -->
                        <!-- VEÍCULO -->
                        <!-- ========================= -->
                        <GroupBox Header="Veículo"
                                  Margin="0,0,0,15">
                                <StackPanel Margin="10">

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,5">
                                                <TextBlock Text="Veículo:"
                                                           Width="80"/>
                                                <TextBox Width="250"
                                                         Text="{Binding Veiculo, UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,5">
                                                <TextBlock Text="Placa:"
                                                           Width="80"/>
                                                <TextBox Width="120"
                                                         Text="{Binding Placa, UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>
                                        <!-- Tipo de Motor -->
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,10,0,0">
                                                <TextBlock Text="Motor:"
                                                           Width="80"
                                                           VerticalAlignment="Center"/>

                                                <ComboBox Width="200"
                                                          ItemsSource="{Binding TiposMotor}"
                                                          SelectedItem="{Binding TipoMotorSelecionado}"/>
                                        </StackPanel>



                                </StackPanel>
                        </GroupBox>

                        <!-- ========================= -->
                        <!-- SERVIÇOS -->
                        <!-- ========================= -->
                        <GroupBox Header="Serviços"
                                  Margin="0,0,0,20">
                                <StackPanel Margin="10">

                                        <!-- ================= BIELA ================= -->
                                        <GroupBox Header="Biela"
                                                  Margin="0,0,0,10">
                                                <Grid>
                                                        <Grid.ColumnDefinitions>
                                                                <ColumnDefinition/>
                                                                <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- SERVIÇOS -->
                                                        <DataGrid Grid.Column="0"
                                                                  ItemsSource="{Binding ItensBiela}"
                                                                  AutoGenerateColumns="False"
                                                                  Height="150">
                                                                <DataGrid.Columns>
                                                                        <DataGridTextColumn Header="Qtde"
                                                                                            Binding="{Binding Quantidade}"
                                                                                            Width="60"/>
                                                                        <DataGridTextColumn Header="Descrição"
                                                                                            Binding="{Binding Servico}"
                                                                                            Width="*"/>
                                                                        <DataGridTextColumn Header="Valor"
                                                                                            Binding="{Binding Total, StringFormat=C}"
                                                                                            Width="80"/>
                                                                </DataGrid.Columns>
                                                        </DataGrid>

                                                        <!-- PEÇAS (em branco) -->
                                                        <DataGrid Grid.Column="1"
                                                                  AutoGenerateColumns="False"
                                                                  Height="150"
                                                                  IsEnabled="False"
                                                                  Opacity="0.5">
                                                                <DataGrid.Columns>
                                                                        <DataGridTextColumn Header="Qtde"
                                                                                            Width="60"/>
                                                                        <DataGridTextColumn Header="Descrição"
                                                                                            Width="*"/>
                                                                        <DataGridTextColumn Header="Valor"
                                                                                            Width="80"/>
                                                                </DataGrid.Columns>
                                                        </DataGrid>
                                                </Grid>
                                        </GroupBox>

                                        <!-- ================= BLOCO ================= -->
                                        <GroupBox Header="Bloco"
                                                  Margin="0,0,0,10">
                                                <Grid>
                                                        <Grid.ColumnDefinitions>
                                                                <ColumnDefinition/>
                                                                <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>

                                                        <DataGrid Grid.Column="0"
                                                                  ItemsSource="{Binding ItensBloco}"
                                                                  AutoGenerateColumns="False"
                                                                  Height="150">
                                                                <DataGrid.Columns>
                                                                        <DataGridTextColumn Header="Qtde"
                                                                                            Binding="{Binding Quantidade}"
                                                                                            Width="60"/>
                                                                        <DataGridTextColumn Header="Descrição"
                                                                                            Binding="{Binding Servico}"
                                                                                            Width="*"/>
                                                                        <DataGridTextColumn Header="Valor"
                                                                                            Binding="{Binding Total, StringFormat=C}"
                                                                                            Width="80"/>
                                                                </DataGrid.Columns>
                                                        </DataGrid>

                                                        <DataGrid Grid.Column="1"
                                                                  AutoGenerateColumns="False"
                                                                  Height="150"
                                                                  IsEnabled="False"
                                                                  Opacity="0.5">
                                                                <DataGrid.Columns>
                                                                        <DataGridTextColumn Header="Qtde"
                                                                                            Width="60"/>
                                                                        <DataGridTextColumn Header="Descrição"
                                                                                            Width="*"/>
                                                                        <DataGridTextColumn Header="Valor"
                                                                                            Width="80"/>
                                                                </DataGrid.Columns>
                                                        </DataGrid>
                                                </Grid>
                                        </GroupBox>

                                        <!-- ================= CABEÇOTE ================= -->
                                        <GroupBox Header="Cabeçote"
                                                  Margin="0,0,0,10">
                                                <Grid>
                                                        <Grid.ColumnDefinitions>
                                                                <ColumnDefinition/>
                                                                <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>

                                                        <DataGrid Grid.Column="0"
                                                                  ItemsSource="{Binding ItensCabecote}"
                                                                  AutoGenerateColumns="False"
                                                                  Height="150">
                                                                <DataGrid.Columns>
                                                                        <DataGridTextColumn Header="Qtde"
                                                                                            Binding="{Binding Quantidade}"
                                                                                            Width="60"/>
                                                                        <DataGridTextColumn Header="Descrição"
                                                                                            Binding="{Binding Servico}"
                                                                                            Width="*"/>
                                                                        <DataGridTextColumn Header="Valor"
                                                                                            Binding="{Binding Total, StringFormat=C}"
                                                                                            Width="80"/>
                                                                </DataGrid.Columns>
                                                        </DataGrid>

                                                        <DataGrid Grid.Column="1"
                                                                  AutoGenerateColumns="False"
                                                                  Height="150"
                                                                  IsEnabled="False"
                                                                  Opacity="0.5">
                                                                <DataGrid.Columns>
                                                                        <DataGridTextColumn Header="Qtde"
                                                                                            Width="60"/>
                                                                        <DataGridTextColumn Header="Descrição"
                                                                                            Width="*"/>
                                                                        <DataGridTextColumn Header="Valor"
                                                                                            Width="80"/>
                                                                </DataGrid.Columns>
                                                        </DataGrid>
                                                </Grid>
                                        </GroupBox>

                                        <!-- ================= EIXO ================= -->
                                        <GroupBox Header="Eixo"
                                                  Margin="0,0,0,10">
                                                <Grid>
                                                        <Grid.ColumnDefinitions>
                                                                <ColumnDefinition/>
                                                                <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>

                                                        <DataGrid Grid.Column="0"
                                                                  ItemsSource="{Binding ItensEixo}"
                                                                  AutoGenerateColumns="False"
                                                                  Height="150">
                                                                <DataGrid.Columns>
                                                                        <DataGridTextColumn Header="Qtde"
                                                                                            Binding="{Binding Quantidade}"
                                                                                            Width="60"/>
                                                                        <DataGridTextColumn Header="Descrição"
                                                                                            Binding="{Binding Servico}"
                                                                                            Width="*"/>
                                                                        <DataGridTextColumn Header="Valor"
                                                                                            Binding="{Binding Total, StringFormat=C}"
                                                                                            Width="80"/>
                                                                </DataGrid.Columns>
                                                        </DataGrid>

                                                        <DataGrid Grid.Column="1"
                                                                  AutoGenerateColumns="False"
                                                                  Height="150"
                                                                  IsEnabled="False"
                                                                  Opacity="0.5">
                                                                <DataGrid.Columns>
                                                                        <DataGridTextColumn Header="Qtde"
                                                                                            Width="60"/>
                                                                        <DataGridTextColumn Header="Descrição"
                                                                                            Width="*"/>
                                                                        <DataGridTextColumn Header="Valor"
                                                                                            Width="80"/>
                                                                </DataGrid.Columns>
                                                        </DataGrid>
                                                </Grid>
                                        </GroupBox>

                                        <!-- ================= MOTOR ================= -->
                                        <GroupBox Header="Motor">
                                                <Grid>
                                                        <Grid.ColumnDefinitions>
                                                                <ColumnDefinition/>
                                                                <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>

                                                        <DataGrid Grid.Column="0"
                                                                  ItemsSource="{Binding ItensMotor}"
                                                                  AutoGenerateColumns="False"
                                                                  Height="150">
                                                                <DataGrid.Columns>
                                                                        <DataGridTextColumn Header="Qtde"
                                                                                            Binding="{Binding Quantidade}"
                                                                                            Width="60"/>
                                                                        <DataGridTextColumn Header="Descrição"
                                                                                            Binding="{Binding Servico}"
                                                                                            Width="*"/>
                                                                        <DataGridTextColumn Header="Valor"
                                                                                            Binding="{Binding Total, StringFormat=C}"
                                                                                            Width="80"/>
                                                                </DataGrid.Columns>
                                                        </DataGrid>

                                                        <DataGrid Grid.Column="1"
                                                                  AutoGenerateColumns="False"
                                                                  Height="150"
                                                                  IsEnabled="False"
                                                                  Opacity="0.5">
                                                                <DataGrid.Columns>
                                                                        <DataGridTextColumn Header="Qtde"
                                                                                            Width="60"/>
                                                                        <DataGridTextColumn Header="Descrição"
                                                                                            Width="*"/>
                                                                        <DataGridTextColumn Header="Valor"
                                                                                            Width="80"/>
                                                                </DataGrid.Columns>
                                                        </DataGrid>
                                                </Grid>
                                        </GroupBox>

                                </StackPanel>
                        </GroupBox>


<!-- ========================= -->
<!-- AÇÕES -->
<!-- ========================= -->
<Grid Margin="0,10,0,20">
    <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>

    <!-- TOTAL GERAL -->
    <TextBlock
        Grid.Column="0"
        Text="{Binding TotalGeral, StringFormat=TOTAL GERAL: R$ {0:N2}}"
        FontSize="18"
        FontWeight="Bold"
        VerticalAlignment="Center"
        Margin="0,0,40,0"/>

    <!-- BOTÃO -->
    <Button
        Grid.Column="1"
        Content="Imprimir OS"
        Width="200"
        Height="40"
        VerticalAlignment="Center"
        Command="{Binding ImprimirOsCommand}"/>
</Grid>


                </StackPanel>
        </ScrollViewer>
</UserControl>
