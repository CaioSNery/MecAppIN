<UserControl x:Class="MecAppIN.Views.Shared.ServicosMotorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- RAIZ CORRETA -->
    <Grid>

        <!-- ================= SERVIÇOS ================= -->
        <GroupBox Header="Serviços"
                  Margin="0,0,0,20">

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- ================= BIELA ================= -->
                <GroupBox Header="Biela" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- SERVIÇOS -->
                        <DataGrid ItemsSource="{Binding ItensBiela}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="True"
                                  CanUserDeleteRows="True"
                                  Height="150"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  AddingNewItem="ServicosBiela_AddingNewItem"
                                  PreviewKeyDown="DataGrid_PreviewKeyDown">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Qtde" Binding="{Binding Quantidade}" Width="60"/>
                                <DataGridTextColumn Header="Descrição" Binding="{Binding Servico}" Width="*"/>
                                <DataGridTextColumn Header="Valor" Binding="{Binding ValorUnitario, StringFormat=N2}" Width="90"/>
                                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" IsReadOnly="True" Width="90"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- PEÇAS -->
                        <DataGrid Grid.Column="1"
                                  ItemsSource="{Binding PecasBiela}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="True"
                                  CanUserDeleteRows="True"
                                  Height="150"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  AddingNewItem="PecasBiela_AddingNewItem"
                                  PreviewKeyDown="DataGrid_PreviewKeyDown">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Qtde" Binding="{Binding Quantidade}" Width="60"/>
                                <DataGridTextColumn Header="Descrição" Binding="{Binding Servico}" Width="*"/>
                                <DataGridTextColumn Header="Valor" Binding="{Binding ValorUnitario, StringFormat=C}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>

                <!-- ================= BLOCO ================= -->
                <GroupBox Header="Bloco" Margin="0,0,0,10" Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <DataGrid ItemsSource="{Binding ItensBloco}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="True"
                                  CanUserDeleteRows="True"
                                  Height="150"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  AddingNewItem="ServicosBloco_AddingNewItem"
                                  PreviewKeyDown="DataGrid_PreviewKeyDown">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Qtde" Binding="{Binding Quantidade}" Width="60"/>
                                <DataGridTextColumn Header="Descrição" Binding="{Binding Servico}" Width="*"/>
                                <DataGridTextColumn Header="Valor" Binding="{Binding ValorUnitario, StringFormat=N2}" Width="90"/>
                                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" IsReadOnly="True" Width="90"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <DataGrid Grid.Column="1"
                                  ItemsSource="{Binding PecasBloco}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="True"
                                  CanUserDeleteRows="True"
                                  Height="150"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  AddingNewItem="PecasBloco_AddingNewItem"
                                  PreviewKeyDown="DataGrid_PreviewKeyDown">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Qtde" Binding="{Binding Quantidade}" Width="60"/>
                                <DataGridTextColumn Header="Descrição" Binding="{Binding Servico}" Width="*"/>
                                <DataGridTextColumn Header="Valor" Binding="{Binding ValorUnitario, StringFormat=C}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>

                <!-- ================= CABEÇOTE ================= -->
                <GroupBox Header="Cabeçote" Margin="0,0,0,10" Grid.Row="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <DataGrid ItemsSource="{Binding ItensCabecote}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="True"
                                  CanUserDeleteRows="True"
                                  Height="150"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  AddingNewItem="ServicosCabecote_AddingNewItem"
                                  PreviewKeyDown="DataGrid_PreviewKeyDown">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Qtde" Binding="{Binding Quantidade}" Width="60"/>
                                <DataGridTextColumn Header="Descrição" Binding="{Binding Servico}" Width="*"/>
                                <DataGridTextColumn Header="Valor" Binding="{Binding ValorUnitario, StringFormat=N2}" Width="90"/>
                                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" IsReadOnly="True" Width="90"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <DataGrid Grid.Column="1"
                                  ItemsSource="{Binding PecasCabecote}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="True"
                                  CanUserDeleteRows="True"
                                  Height="150"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  AddingNewItem="PecasCabeCote_AddingNewItem"
                                  PreviewKeyDown="DataGrid_PreviewKeyDown">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Qtde" Binding="{Binding Quantidade}" Width="60"/>
                                <DataGridTextColumn Header="Descrição" Binding="{Binding Servico}" Width="*"/>
                                <DataGridTextColumn Header="Valor" Binding="{Binding ValorUnitario, StringFormat=C}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>

                <!-- ================= EIXO ================= -->
                <GroupBox Header="Eixo" Margin="0,0,0,10" Grid.Row="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <DataGrid ItemsSource="{Binding ItensEixo}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="True"
                                  CanUserDeleteRows="True"
                                  Height="150"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  AddingNewItem="ServicosEixo_AddingNewItem"
                                  PreviewKeyDown="DataGrid_PreviewKeyDown">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Qtde" Binding="{Binding Quantidade}" Width="60"/>
                                <DataGridTextColumn Header="Descrição" Binding="{Binding Servico}" Width="*"/>
                                <DataGridTextColumn Header="Valor" Binding="{Binding ValorUnitario, StringFormat=N2}" Width="90"/>
                                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" IsReadOnly="True" Width="90"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <DataGrid Grid.Column="1"
                                  ItemsSource="{Binding PecasEixo}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="True"
                                  CanUserDeleteRows="True"
                                  Height="150"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  AddingNewItem="PecasEixo_AddingNewItem"
                                  PreviewKeyDown="DataGrid_PreviewKeyDown">

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Qtde" Binding="{Binding Quantidade}" Width="60"/>
                                <DataGridTextColumn Header="Descrição" Binding="{Binding Servico}" Width="*"/>
                                <DataGridTextColumn Header="Valor" Binding="{Binding ValorUnitario, StringFormat=C}" Width="80"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>

            </Grid>
        </GroupBox>

    </Grid>
</UserControl>

