<Window x:Class="MecAppIN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MecAppIN.ViewModels"
        xmlns:views="clr-namespace:MecAppIN.Views"
        Title="MecAppIN"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:ClientesViewModel}">
            <views:ClientesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:BuscarOrdemServicosViewModel}">
            <views:BuscarOrdemServicosView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:OrcamentosViewModel}">
            <views:OrcamentosView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:OrdemServicosViewModel}">
            <views:OrdemServicosView/>
        </DataTemplate>

            <DataTemplate DataType="{x:Type vm:DiaDiaViewModel}">
                <views:DiaDiaView/>
            </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:BuscarOrcamentosViewModel}">
            <views:BuscarOrcamentosView/>
        </DataTemplate>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- MENU LATERAL -->
        <Grid Grid.Column="0"
              Background="#2D2D30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Cabeçalho + logo -->
                <RowDefinition Height="*"/>
                <!-- Botões -->
            </Grid.RowDefinitions>

            <!-- CABEÇALHO -->
            <Border Grid.Row="0"
                    Background="#000000"
                    Padding="10">

                <StackPanel HorizontalAlignment="Center">

                    <!-- Nome da loja -->
                    <TextBlock Text="B.N.W Retífica e Oficina"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               Margin="0,10,0,8"
                               TextWrapping="Wrap"/>

                    <!-- LOGO -->
                    <Image Source="/Images/bnwLOGO.png"
                           Width="80"
                           Height="80"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,6"/>

                    <!-- DATA E HORA -->
                    <TextBlock Text="{Binding DataHoraAtual}"
                               Foreground="#B0B0B0"
                               FontSize="13"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>



            <!-- BOTÕES -->
            <StackPanel Grid.Row="1"
                        Margin="10">

                <Button Content="Ordem de Serviço"
                        Command="{Binding AbrirOrdemServicoCommand}"
                        Height="45"
                        Margin="0,5"/>

                <Button Content="Buscar Ordem de Serviços"
                        Command="{Binding AbrirBuscarOrdemServicoCommand}"
                        Height="45"
                        Margin="0,5"/>

                <Button Content="Orçamentos"
                        Command="{Binding AbrirOrcamentosCommand}"
                        Height="45"
                        Margin="0,5"/>

                <Button Content="Buscar Orçamentos"
                        Command="{Binding AbrirBuscarOrcamentosCommand}"
                        Height="45"
                        Margin="0,5"/>

                <Button Content="Clientes"
                        Command="{Binding AbrirClientesCommand}"
                        Height="45"
                        Margin="0,5"/>

                <Button Content="Dia-a-Dia(Financeiro)"
                        Command="{Binding AbrirDiaDiaCommand}"
                        Height="45"
                        Margin="0,5"/>
            </StackPanel>
        </Grid>

        <!-- CONTEÚDO PRINCIPAL -->
        <ContentControl Grid.Column="1"
                        Content="{Binding TelaAtual}"
                        Margin="20"/>
    </Grid>
</Window>
